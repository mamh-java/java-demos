<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.mamh.spring.demo.beans.Book" table="sp_book" schema="atguigu">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
            <generator class="native"/>
        </id>
        <property name="isbn">
            <column name="isbn" sql-type="varchar(1024)" length="1024"/>
        </property>
        <property name="bookName">
            <column name="book_name" sql-type="varchar(4096)" length="4096" not-null="true"/>
        </property>
        <property name="price">
            <column name="price" sql-type="float" precision="-1" not-null="true"/>
        </property>
        <property name="stock">
            <column name="stock" sql-type="int"/>
        </property>
    </class>
</hibernate-mapping>