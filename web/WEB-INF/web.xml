<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <context-param>
        <param-name>password</param-name>
        <param-value>1234</param-value>
    </context-param>

    <context-param>
        <param-name>userSessionKey</param-name>
        <param-value>USER_SESSION_KEY</param-value>
    </context-param>

    <context-param>
        <param-name>redirectPage</param-name>
        <param-value>/login/login.jsp</param-value>
    </context-param>
    <context-param>
        <param-name>unCheckedUrls</param-name>
        <!-- 类似的白名单，哪些url不需要拦截的 -->
        <param-value>
            /login/a.jsp,/login/login.jsp,/login/list.jsp,/login/dologin.jsp,/permission/403.jsp,/permission/articles.jsp,/permission/authority-manager.jsp,/permission/login.jsp,/permission/logout.jsp,/permission/loginPermissionServlet
        </param-value>
    </context-param>

    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.atguigu.mvcapp.filter.UserIsLoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <!-- 这里拦截所有的url，配合白名单一起公共。 类似的白名单，哪些url不需要拦截的 -->
        <url-pattern>/login/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>permissionFilter</filter-name>
        <filter-class>com.atguigu.mvcapp.filter.AuthorityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>permissionFilter</filter-name>
        <!-- 这里拦截所有的url，配合白名单一起公共。 类似的白名单，哪些url不需要拦截的 -->
        <url-pattern>/permission/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>usernameFilter</filter-name>
        <filter-class>com.atguigu.mvcapp.filter.UserNameFilter</filter-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>Tom</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>usernameFilter</filter-name>
        <url-pattern>/hello.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>contentFilter</filter-name>
        <filter-class>com.atguigu.mvcapp.filter.ContentFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>contentFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>passwordFilter</filter-name>
        <filter-class>com.atguigu.mvcapp.filter.PasswordFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>passwordFilter</filter-name>
        <url-pattern>/hello.jsp</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>com.atguigu.mvcapp.servlet.CustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>InitServlet</servlet-name>
        <servlet-class>com.atguigu.mvcapp.servlet.InitServlet</servlet-class>
        <load-on-startup>1</load-on-startup>

    </servlet>


    <servlet>
        <servlet-name>validateColorServlet</servlet-name>
        <servlet-class>com.atguigu.mvcapp.servlet.ValidateColorServlet</servlet-class>
        <init-param>
            <param-name>user</param-name>
            <param-value>mtest</param-value>
        </init-param>
        <init-param>
            <param-name>passwd</param-name>
            <param-value>123456</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>validateColorServlet</servlet-name>
        <url-pattern>/validateColorServlet</url-pattern>
    </servlet-mapping>


    <listener>
        <listener-class>com.atguigu.mvcapp.listener.HelloServletContextListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.atguigu.mvcapp.listener.AttributeListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.atguigu.mvcapp.listener.FileUploadAppListener</listener-class>
    </listener>
</web-app>