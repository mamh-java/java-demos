<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true"/>


    <package name="com.mamh.ssh.demo" extends="struts-default" namespace="/">

        <!-- 定义新的拦截器栈 -->
        <interceptors>
            <interceptor-stack name="ssh">
                <interceptor-ref name="paramsPrepareParamsStack">
                    <param name="prepare.alwaysInvokePrepare">true</param>
                </interceptor-ref>
            </interceptor-stack>

        </interceptors>

        <default-interceptor-ref name="ssh"/>

        <action name="emp-*" class="employeeAction" method="{1}">
            <result name="list">list.jsp</result>
            <result name="input">input.jsp</result>
            <result name="delete" type="redirectAction">emp-list.action</result>
            <result name="save" type="redirectAction">emp-list.action</result>
        </action>
    </package>


</struts>