<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mamh.mybatis.demo.model.User">

    <cache />

    <select id="getUser" parameterType="int" resultType="User">
        SELECT *
        FROM mb_users
        WHERE id = #{id}
    </select>

    <insert id="addUser" parameterType="User">
        INSERT INTO mb_users (name, age) VALUE (#{name}, #{age})
    </insert>

    <delete id="delUser">
        DELETE FROM mb_users
        WHERE id = #{id}
    </delete>

    <update id="updateUser" parameterType="User">
        UPDATE mb_users
        SET name = #{name}, age = #{age}
        WHERE id = #{id}
    </update>

    <select id="getAllUser" parameterType="int" resultType="User">
        SELECT *
        FROM mb_users
    </select>

    <select id="getUsers" parameterType="ConditionUser" resultType="User">
        SELECT * FROM mb_users WHERE
        <if test="name != null">
            name LIKE "%"#{name}"%" AND
        </if>
        age between #{minAge} and #{maxAge}
    </select>

</mapper>